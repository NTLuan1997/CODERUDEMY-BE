<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/static/css/users.css">
</head>

<body>
    <div class="user my-5">
        <div class="d-flex align-items-center justify-content-between">
            <h3 class="title-table">Thông tin người dùng</h3>
            <button class="btn btn-primary" id="create-btn" data-toggle="modal" data-target="#exampleModal">
                <i class="fa fa-plus mr-2" aria-hidden="true"></i>Thêm mới
            </button>
        </div>
        <table class="table mb-0">
            <thead class="thead-dark">
                <tr>
                    {{#each keys}}
                    <th>{{this}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.user_name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.password}}</td>
                    <td>{{this.status}}</td>
                    <td>[{{this.skill}}]</td>
                    <td>{{this.age}}</td>
                    <td>
                        <button type="button" class="btn btn-primary"><a
                                href="/users/detail?t=u&&id={{this._id}}">Sửa</a></button>
                        <button type="button" class="btn btn-danger"><a
                                href="/users/detail?t=d&&id={{this._id}}">Xóa</a></button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</body>

</html>