<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/static/css/users.css">
</head>

<body>
    <div class="user my-5">
        <div class="d-flex align-items-center justify-content-end">
            <button id="create-btn">Create user</button>
        </div>
        <table class="table mb-0">
            <thead class="thead-dark">
                <tr>
                    {{#each keys}}
                    <th>{{this}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.user_name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.password}}</td>
                    <td>{{this.status}}</td>
                    <td>[{{this.skill}}]</td>
                    <td>{{this.age}}</td>
                    <td>
                        <button type="button"><a href="/users/detail?t=u&&id={{this._id}}">Update</a></button>
                        <button type="button"><a href="/users/detail?t=d&&id={{this._id}}">Delete</a></button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</body>

</html>